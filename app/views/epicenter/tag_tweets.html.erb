<div>
  <h1><%= @tag.phrase %></h1>
</div>

<div class="row">

  <div>
    <% @tag.tweeters.order(created_at: :desc).each do |tweet| %>
    <p>
      <%= tweeter.user.name %> <%= "@#{tweet.user.username}" %>
        <%= time_ago_in_words(tweeter.created_at) %>
    </p>
    <p>
      <%= tweeter.message.html_safe %>
    </p>
  <% end %>
  </div>
</div>
